<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <TextView
        android:id="@+id/menuInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/menuInstructions"/>

    <Spinner
        android:id="@+id/majorSelector"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/menuInstructions"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:entries="@array/majorList"/>

    <Button
        android:id="@+id/menuButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/majorSelector"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/menuButton"
        android:onClick="showPlan"/>

</RelativeLayout>